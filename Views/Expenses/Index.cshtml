@model IEnumerable<MailTax.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

<h1>Expenses Report</h1>

<p class="create">
    <a asp-action="Create">Add Expense</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Supplier</th>
            <th>Total</th>
            <th>Info</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierNameNavigation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseAmmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDate)
                
            </td>
            <td class="actions" >
                <a asp-action="Edit" asp-route-id="@item.ExpenseId">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ExpenseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

