@model MailTax.Models.Expense

@{
    ViewData["Title"] = "Delete";
}


<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl>
        <dt>Date</dt>
        <dd>
            @Html.DisplayFor(model => model.ExpenseDate)
        </dd>
        <dt>Total</dt>
        <dd>
            @Html.DisplayFor(model => model.ExpenseAmmount)
        </dd>
        <dt>Details</dt>
        <dd>
            @Html.DisplayFor(model => model.ExpenseDescription)
        </dd>
        <dt>Supplier</dt>
        <dd>
            @Html.DisplayFor(model => model.SupplierName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExpenseId" />
        <button type="submit" value="Delete">Delete</button>
    </form>
    <a asp-action="Index">Cancel</a>
</div>

