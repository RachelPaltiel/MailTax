@model MailTax.Models.Supplier

@{
    ViewData["Title"] = "Create";
}

<h1>Add Suppluer</h1>

<hr/>
<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <input asp-for="SupplierName" placeholder="Name" />
                <span asp-validation-for="SupplierName"></span>
            </div>
            <div>
                <input asp-for="SupplierId" placeholder="Supplier ID" />
                <span asp-validation-for="SupplierId"></span>
            </div>
            <div>
                <select asp-for="Category" asp-items="ViewBag.Category">
                    <option value="" disabled selected>Default category</option>
                </select>
            </div>
            <div>
                <a href="https://localhost:7035/Categorys/Create" >Add new category</a>
            </div>
            <div>
                <button type="submit" value="Create">Add Supplier</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    
body {
      background-color: #DCF0F2;
      font-family: trebuchet ms; 
      font-size: 100%;
      text-align: center;
      color: #436573; 
}

