@model IEnumerable<MailTax.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<div>
    <h1><b>Suppliers | </b><a href="https://localhost:7035/Categorys">Analytics </a></h1>
</div>

<p class="create">
    <a asp-action="Create">Add Supplier</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Supplier ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryNavigation.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierId)
            </td>
            <td class="actions">
                <a asp-action="Edit" asp-route-id="@item.SupplierName">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.SupplierName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

