@model MailTax.Models.Doc

@{
    ViewData["Title"] = "Delete";
}

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl>
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.DocName)
        </dd>
        <dt>Details</dt>
        <dd>
            @Html.DisplayFor(model => model.DocDesc)
        </dd>
        <dt>Location</dt>
        <dd>
            @Html.DisplayFor(model => model.DocPath)
        </dd>
        <dt>Folder</dt>
        <dd>
            @Html.DisplayFor(model => model.FolderId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DocId" />
        <button type="submit" value="Delete">Delete</button>
    </form>
    <a asp-action="Index">Cancel</a>
</div>

<style>
    
body {
      background-color: #DCF0F2;
      font-family: trebuchet ms; 
      text-align: center;
      color: #436573; 
}


dl {
    width: 16rem;
    display: inline-block;
    margin: 2rem;
}

dd {
    background-color: #ffffff;
    width: 16rem;
    height: 2.5rem;
    padding: .5rem;
    border-radius: .5rem;
    margin-bottom: 1rem;
}


a:link {
    text-decoration-line: none; 
    color: #436573; 
    display: inline-block;
    padding: 2rem;
    width: 10rem;
    height: 5rem;
}

a:visited {
    text-decoration-line: none;
    color: #436573; 
    display: inline-block
}

a:hover {
    text-decoration-line: none;
    color: #ffffff; 
    display: inline-block
}


button  {
    background-color: #436573;
    color: #DCF0F2;
    border-radius: 2rem;
    padding: 1rem;
    margin: 1rem;
    width: 10rem;
    font-size: 1rem;
    border: none;
    text-decoration: none;
    cursor: pointer;
    font-family: 'Trebuchet MS';
}

button:hover {
    background-color: #ffffff;
    color: #436573;
}

</style>